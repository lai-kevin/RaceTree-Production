generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  clerkId   String    @unique
  steamId   String    @unique
  email     String    @unique
  name      String?
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  nickname  String?
  aboutMe   String?
  views     Int       @default(0)
  leagues   League[]
  teams     Team[]
  games     Game[]
  clips     Clip[]
  Comment   Comment[]
}

model League {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  teams     Team[]
  games     Game[]
}

model Team {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  leagues   League[]
  games     Game[]
}

model Game {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  leagues   League[]
  teams     Team[]
  clips     Clip[]
  User      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}

model Clip {
  id        Int       @id @default(autoincrement())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  game      Game      @relation(fields: [gameId], references: [id])
  gameId    Int
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  url       String
  views     Int       @default(0)
  likes     Int       @default(0)
  dislikes  Int       @default(0)
  comments  Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  clip      Clip     @relation(fields: [clipId], references: [id])
  clipId    Int
  text      String
  likes     Int      @default(0)
  dislikes  Int      @default(0)
}
